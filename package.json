{
  "name": "cloudybd-server",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/server.js",
  "type": "commonjs",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "lint:check": "eslint . --ext .ts --ignore-path .eslintignore",
    "lint:fix": "eslint . --ext .ts --fix --ignore-path .eslintignore",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint-prettier": "npm run lint:check && npm run prettier:check",
    "lint-staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "docker:build": "docker-compose build",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "axios": "^1.6.8",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "eventemitter2": "^6.4.9",
    "express": "^4.18.3",
    "google-auth-library": "^10.1.0",
    "helmet": "^8.1.0",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.12.10",
    "luxon": "^3.7.1",
    "mongoose": "^8.2.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.12",
    "slugify": "^1.6.6",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/luxon": "^3.7.1",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "checkly": "^6.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.7.2"
  }
}
